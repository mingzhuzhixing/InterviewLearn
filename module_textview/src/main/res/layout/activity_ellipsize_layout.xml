<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ellipsize_view.EllipsizeLayoutActivity"
    tools:ignore="MissingDefaultResource">

    <com.v.module_textview.ellipsize_view.EllipsizeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="不宽度,不确定字数不宽度,不确定字数不宽不确定字数不宽" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9B52"
            android:text="跟随标签" />
    </com.v.module_textview.ellipsize_view.EllipsizeLayout>

    <com.v.module_textview.ellipsize_view.EllipsizeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="不宽度,不确定字数不宽度," />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF9B52"
            android:text="跟随标签" />

    </com.v.module_textview.ellipsize_view.EllipsizeLayout>

    <com.v.module_textview.ellipsize_view.EllipsizeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="不宽度,不确定字数不宽度,不确定" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music" />

    </com.v.module_textview.ellipsize_view.EllipsizeLayout>

    <com.v.module_textview.ellipsize_view.EllipsizeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="不宽度,不确定字数不宽度,不确定字数不宽不确定字数不" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/music" />

    </com.v.module_textview.ellipsize_view.EllipsizeLayout>

</LinearLayout>