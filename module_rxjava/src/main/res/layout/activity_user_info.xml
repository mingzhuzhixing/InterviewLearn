<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取所有数据"
            android:onClick="getProjectData"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取所有数据"
            android:onClick="getProjectItem"/>

        <Button
            android:id="@+id/debounce_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="防抖动请求"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="普通的嵌套请求"
            android:onClick="normalNesting"/>

        <Button
            android:id="@+id/btn_flatMap_nesting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="flatMap解决嵌套请求"/>

        <Button
            android:id="@+id/btn_flatMap_nesting_once"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="flatMap解决嵌套请求一个item"/>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>