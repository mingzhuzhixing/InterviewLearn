<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--钟表整体颜色-->
    <attr name="color" format="color" />
    <!--数字大小-->
    <attr name="numSize" format="dimension" />
    <!--中心外圆半径-->
    <attr name="inCircle" format="integer" />
    <!--中心内圆半径-->
    <attr name="outCircle" format="integer" />

    <declare-styleable name="ClockView">
        <attr name="numSize" />
        <attr name="color" />
        <attr name="inCircle" />
        <attr name="outCircle" />
    </declare-styleable>


    <!-- name 自定义view的名字 TextView-->
    <declare-styleable name="TextView">
        <!-- name 属性名称
        format 格式:string 文字
                   color 颜色
                   dimension 宽高 字体大小
                   integer 数字
                   reference 资源(drawable)
                   -->
        <attr name="cusText" format="string" />
        <attr name="cusTextColor" format="color" />
        <attr name="cusTextSize" format="dimension" />
        <attr name="cusMaxLength" format="integer" />
        <!-- background 自定义view都是集成自view的，背景是由view来管理的-->
        <!-- <attr name="cusBackground" format="reference|color" />-->
        <!--枚举-->
        <attr name="inputType">
            <enum name="number" value="1" />
            <enum name="text" value="2" />
            <enum name="password" value="3" />
        </attr>

    </declare-styleable>

    <!--仿qq运动步数 自定义属性-->
    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="color" />
        <attr name="innerColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="color" />
    </declare-styleable>

    <!--滑动字体颜色跟踪变色 自定义属性-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>

    <!--评分控件 RatingBar 自定义属性-->
    <declare-styleable name="RatingBarView">
        <attr name="starNormal" format="reference" />
        <attr name="starFocus" format="reference" />
        <attr name="starCount" format="integer" />
        <attr name="starPadding" format="dimension" />
    </declare-styleable>

    <!--字符侧边栏bar LetterSideBar 自定义属性-->
    <declare-styleable name="LetterSideBar">
        <attr name="normalColor" format="color" />
        <attr name="focusColor" format="color" />
        <attr name="letterTextSize" format="dimension" />
        <attr name="letterPaddingTop" format="dimension" />
        <attr name="letterPaddingBottom" format="dimension" />
    </declare-styleable>

    <!-- KsgLikeView-->
    <declare-styleable name="KsgLikeView">
        <!-- 进入动画 时长-->
        <attr name="ksg_enter_duration" format="integer"/>
        <!--路径动画 时长-->
        <attr name="ksg_curve_duration" format="integer"/>
    </declare-styleable>

    <!-- SlideLayout -->
    <declare-styleable name="WidgetSlideLayout">
        <attr name="widget_slide_overlay_distance" format="dimension" />
        <attr name="widget_disable_slider_refresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WidgetMinVerticalMarginFrameLayout">
        <attr name="widget_min_vertical_margin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="WaveProgressView">
        <attr name="backgroundColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="circleWidth" format="dimension"/>
        <attr name="waveColor" format="color"/>
        <attr name="waveHeight" format="dimension"/>
        <attr name="waveAmplitude" format="dimension"/>
        <attr name="waveSpeed" format="integer"/>
        <attr name="waveDirection" format="integer"/>
        <attr name="waveInterval" format="integer"/>
    </declare-styleable>
</resources>