<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextViewMainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="tagTextView"
        android:onClick="tagTextView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="htmlTextView"
        android:onClick="htmlTextView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="spannableStringTextView"
        android:onClick="spannableStringTextView"/>

</LinearLayout>