<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="@dimen/x543"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_r10_fill"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y40">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/rv_top_big_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y220"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:riv_corner_radius_top_left="@dimen/y10"
            app:riv_corner_radius_top_right="@dimen/y10"
            app:riv_oval="false"
            tools:src="@drawable/udesk_defalut_image_loading"
            tools:visibility="gone" />

        <RelativeLayout
            android:id="@+id/tmp_layout"
            android:layout_width="100dp"
            android:layout_height="@dimen/y10"
            android:background="#00ff00ff" />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y152"
            android:layout_below="@+id/tmp_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y24"
            android:visibility="gone"
            tools:src="@drawable/taskcenter_jinbi_icon"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/P2_S36_5_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginRight="@dimen/x20"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="这是标题"
            android:textColor="@color/text_1b"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_content"
            style="@style/P7_S26_3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x46"
            android:layout_marginTop="@dimen/y24"
            android:layout_marginRight="@dimen/x46"
            android:ellipsize="end"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y12"
            android:maxLines="10"
            android:textColor="@color/F4"
            android:visibility="gone"
            tools:text="这是内容这是内容这是内容这是内容这是内容这是内容"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_image2"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y152"
            android:layout_below="@+id/tmp_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:visibility="gone"
            tools:src="@drawable/taskcenter_jinbi_icon"
            tools:visibility="visible" />

        <RelativeLayout
            android:id="@+id/body_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginTop="@dimen/y36"
            android:layout_marginRight="@dimen/x36"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/P5_S30_4_4"
                android:layout_width="@dimen/x440"
                android:layout_height="@dimen/y80"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/shape_notifybtn_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/F5"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_ok"
                style="@style/P5_S30_4_4"
                android:layout_width="@dimen/x440"
                android:layout_height="@dimen/y80"
                android:layout_weight="1"
                android:background="@drawable/shape_notifybtn_r8"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/W"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_layout_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/body_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x36"
            android:layout_marginTop="@dimen/y36"
            android:layout_marginRight="@dimen/x36"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_cancel_vertical"
                style="@style/P5_S30_4_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_marginBottom="@dimen/y20"
                android:layout_weight="1"
                android:background="@drawable/shape_notifybtn_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/F5"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_ok_vertical"
                style="@style/P5_S30_4_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:layout_weight="1"
                android:background="@drawable/shape_notifybtn_r8"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/W"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_content"
        android:paddingTop="@dimen/y20"
        android:paddingRight="@dimen/x20"
        android:src="@drawable/tips_close_new_icon" />
</RelativeLayout>